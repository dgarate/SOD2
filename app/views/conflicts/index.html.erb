<p id="notice"><%= notice %></p>

<h1>Conflicts</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Cycle</th>
      <th>Responsibility</th>
      <th>Control</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conflicts.each do |conflict| %>
      <tr>
        <td><%= conflict.company_id %></td>
        <td><%= conflict.cycle_id %></td>
        <td><%= conflict.responsibility_id %></td>
        <td><%= conflict.control_id %></td>
        <td><%= link_to 'Show', conflict %></td>
        <td><%= link_to 'Edit', edit_conflict_path(conflict) %></td>
        <td><%= link_to 'Destroy', conflict, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Conflict', new_conflict_path %>
